<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import dk.gtz.graphedit.view.*?>
<StackPane
    xmlns:fx="http://javafx.com/fxml"
    xmlns="http://javafx.com/javafx"
    fx:controller="dk.gtz.graphedit.view.EditorController">
<BorderPane HBox.hgrow="ALWAYS">
    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="Open File"/>
                <MenuItem text="Open Project"/>
                <MenuItem text="Quit"/>
            </Menu>
            <Menu text="Editor">
                <MenuItem onAction="#toggleTheme" text="Toggle Theme"/>
            </Menu>
            <Menu text="WIP">
                <MenuItem onAction="#addPlaceholderTab" text="Add new placeholder tab"/>
            </Menu>
        </MenuBar>
    </top>
    <left>
        <fx:include source="FileView.fxml"/>
    </left>
    <center>
        <fx:include source="EditorTabPane.fxml"/>
    </center>
    <right>
        <Label text="Hello World"/>
    </right>
    <bottom>
        <Label text="Hello World"/>
    </bottom>
</BorderPane>
</StackPane>

